<section class="container my-5 post-container w-100 p-0" style="background-color:white;">
    <div class="border-box text-center title-text p-2">
        <h3>LOGIN</h3>
    </div>
    <div class="d-flex justify-content-center">
        <form class="p-4" id="loginForm">
            <div class="form-group row">
                <label for="inputUsername" class="col-sm-3 col-form-label">Username</label>
                <div class="col-sm-11">
                    <input type="text" class="form-control" id="inputUsername">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword" class="col-sm-3 col-form-label">Password</label>
                <div class="col-sm-11">
                    <input type="password" class="form-control" id="inputPassword">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-11 d-flex justify-content-center p-3">
                    <button type="submit" class="btn btn-primary">Login!</button>
                </div>
                <div class="col text-left"><a class="sign-up" href="/signup">or sign up</a></div>
            </div>
        </form>
    </div>
</section>

